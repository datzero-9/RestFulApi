<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <title>EXPRESSs JS</title>
</head>

<body>

  <div class="container-xxl">
    <h2>Project nodejs</h2>
    <%- include('header') %>
      <div>
        <form method="POST" action="/course/create">
          <div class="mb-3">
            <label for="name" class="form-label">Tên khóa học:</label>
            <input name="name" type="text" class="form-control" id="name" aria-describedby="emailHelp" oninput=""
              required>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Mô tả:</label>
            <input name="description" type="text" class="form-control" id="description">
          </div>

          <button type="submit" class="btn btn-primary">Thêm khóa học</button>
        </form>
      </div>
      <h1>Courses</h1>
      <div class="row">
        <% courses.forEach(course=> { %>
          <div class="col-sm-6 col-lg-4">
            <div class="card m-3" style="width: 18rem; border: 1px solid red;">
              <img src="<%=course.image %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%= course.name.slice(0, 15) + (course.name.length> 18 ? '...' : '') %>
                </h5>
                <p class="card-text">
                  <%= course.description.slice(0, 20) + (course.description.length> 20 ? '...' : '') %>
                </p>

                <a href="/course/<%=course.slug%>" class="btn btn-primary">Xem khóa học </a>
                <div class="mt-2">
                  <a href="/course/update/<%=course.id%>" class="btn btn-warning">Edit</a>

                  <a href="" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteCourse"
                    data-id="<%=course.id%>" data-id="<%=course.id%>">Delete</a>

                </div>
              </div>
            </div>
          </div>
          <% }); %>
            <form name="deleteCourse" method="POST"> </form>
      </div>


      <%- include('footer') %>


      <!-- //confirm xóa -->

      <div class="modal fade" id="deleteCourse" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Bạn có muốn xóa khóa học này?
            </div>
            <div class="modal-footer">
              <button id="delete-course" type="button" class="btn btn-danger">Xóa bỏ</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            </div>
          </div>
        </div>
      </div>






      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <script>
        var id;
        var deleteCourse = document.forms['deleteCourse'];
        var btndelete = document.querySelector('#delete-course');
        document.addEventListener('DOMContentLoaded', function () {

          $('#deleteCourse').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            id = button.data('id')
            console.log(id)
          })
        })

        btndelete.onclick = function () {
          deleteCourse.action = '/course/delete/' + id + '?_method=DELETE';
          deleteCourse.submit();
        }

      </script>
  </div>
</body>

</html>